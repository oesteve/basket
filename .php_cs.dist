<?php

$finder = PhpCsFixer\Finder::create()
    ->in(array(
        'src',
        'tests',
    ))
;


return PhpCsFixer\Config::create()
    ->setRules([
        '@Symfony' => true,
        '@Symfony:risky' => true,
        '@PHPUnit75Migration:risky' => true,
        'no_unused_imports' => true,
        'no_superfluous_phpdoc_tags' => true
    ])
    ->setRiskyAllowed(true)
    ->setFinder($finder)
    ->setCacheFile(__DIR__.'/.php_cs.cache');